import {combineReducers} from "redux";
import menuState from "./menuState";
import simulatorInfoState from "./simulatorInfoState";
import eventLogState from "./eventLogState";
import testResultState from "./testResultState";
import chargerInfoState from "./chargerInfoState";
import loadingState from "./loadingState";
import {all} from "axios";
import sampleApiRequestState, {sampleSaga} from "./sampleApiRequestState";

const rootReducer = combineReducers({
    menuState,
    simulatorInfoState,
    eventLogState,
    testResultState,
    chargerInfoState,
    loadingState,
    sampleApiRequestState
});

export function* rootSaga() {
    yield all([sampleSaga()]);
}

export default rootReducer;